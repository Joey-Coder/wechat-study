/* pages/index/index.wxss */
.index-container {
  display: flex;
  box-sizing: border-box;
  padding: 200rpx 0;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  margin: 20rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
}

.user-name {
  color: #aaa;
}

.user-motto {
  box-sizing: border-box;
  height: 100rpx;
  margin-top: 400rpx;
  padding: 0 18rpx;
  line-height: 100rpx;
  border: 1px solid #666666;
  border-radius: 20rpx;
}